<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Stablecoin Watch</title>
        <link rel="stylesheet" type="text/css" href="/common.css" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <script type="application/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
        <style>

            /****************************************
                    Main Grid
            *****************************************/
            .grid-wrap {
                margin-bottom: 40px;
                display: grid;
                grid-template-areas:
                    'data-comp-head   data-comp-head'
                    'data-comp-tb     data-comp-tb'
                    'supply-head      supply-head'
                    'supply-table     supply-chart';
                grid-gap: 5px;
                /* justify-content: center; */
                width: 100%;
            }

            .supply-head     { grid-area: supply-head;    }
            .supply-table    { grid-area: supply-table; width: 100%; height: 100%;}
            .supply-chart    { grid-area: supply-chart; }
            .data-comp-head  { grid-area: data-comp-head; }
            .data-comp-tb    { grid-area: data-comp-tb;   }
            canvas { 
                width: 100%;
                max-width: 300px;
                margin: auto;
            }

            /****************************************
                    Platform Section
            *****************************************/

            .supply-grid {
                display: grid;
                grid-template-areas:
                    'name amount';
                /* grid-gap: 1px; */
                width: 80%;
                margin: auto;

            }

            .supply-item {
                padding: 10px;
            }
            
            .supply-amount {
                text-align: right;
            }

            h1, h2, h3 {
                text-align: center;
                margin: auto;
                margin-top: 20px;
                padding: 20px;
            }

            /****************************************
                    Data Comparison Table
            *****************************************/

            table {
                margin: auto;
            }

            table td {
                border-bottom: 1px solid black;
                padding: 10px;
            }

            table th {
                border-bottom: 1px solid black;
                padding: 10px;
                background: rgba( 0, 0, 0, 0.5);
                color: white;
            }

            tr > td:first-of-type {
                font-weight: bold;
                text-align: right;
            }

            /****************************************
                    Mobile Support
                    3:33:44
            *****************************************/

            @media only screen and (max-width: 767px) {
                .grid-wrap {
                    grid-template-areas:
                        'data-comp-head'
                        'data-comp-tb'
                        'supply-head'
                        'supply-table'
                        'supply-chart';
                }

                .supply-grid {
                    grid-template-columns: 1fr 2fr;
                    max-width: 60%;
                }

                table td, table th {
                    padding: 10px 3px;
                }
            }
        </style>
    </head>
    <body>
        <div id="wrapper">
            <!-- Header -->
            <%- include('partials/header') %>
            <!-- Header -->
            <main class="grid-wrap">
                <section class="supply-head"><h1><%= coin.name %> is issued on <%= coin.platforms.length %> platform(s)</h1></section>
                <section class="supply-table">
                    <article class="supply-grid">
                        <% for (let i = 0; i < coin.platforms.length; i++) { %>
                            <div class="supply-item name">
                                <%= coin.platforms[i].name %>
                            </div>
                            <div class="supply-item supply-amount">
                                <!-- formats number with commas -->
                                <% if( typeof(coin.platforms[i].supply) == 'number') { %>
                                    <%= coin.platforms[i].supply.toFixed().toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> <%= coin.symbol %>
                                <% } else { %>
                                    ? <%= coin.symbol %>
                                <% } %>
                            </div> 
                        <% } %>
                    </article>
                </section>
                <section class="supply-chart">
                    <canvas id="supply_chart" width="40" height="40"></canvas>
                </section>
                <section class="data-comp-head">
                    <h1>Data Source Comparison</h1>
                </section>
                <section class="data-comp-tb">
                
                    <table>
                        <tr>
                            <th>Source</th>
                            <th>Price</th>
                            <th>Market Cap</th>
                            <th>Total Supply</th>
                            <th>Circulating Supply</th>
                            <th>Volume</th>
                        </tr>
                        <tr>
                            <td>Coin Market Cap</td>
                            <td><%= coin.cmc.price %></td>
                            <td><%= coin.cmc.mcap_s %></td>
                            <% try { %>
                            <td><%= coin.cmc.total_supply_s.replace('$', '') %></td>
                            <% } catch {} %>
                            <td><%= coin.cmc.circulating_supply_s %></td>
                            <td><%= coin.cmc.volume_s %></td>
                        </tr>
                        <tr>
                            <td>Messari</td>
                            <td><%= coin.msri.price %></td>
                            <td><%= coin.msri.mcap_s %></td>
                            <% try { %>
                            <td><%= coin.msri.total_supply_s.replace('$', '') %></td>
                            <% } catch {} %>
                            <td><%= coin.msri.circulating_supply_s %></td>
                            <td><%= coin.msri.volume_s %></td>
                        </tr>
                        <tr>
                            <td>Stablecoin Watch</td>
                            <td><%= coin.scw.price %></td>
                            <td><%= coin.scw.mcap_s %></td>
                            <% try { %>
                            <td><%= coin.scw.total_supply_s.replace('$', '') %></td>
                            <% } catch {} %>
                            <td><%= coin.scw.circulating_supply_s %></td>
                            <td><%= coin.scw.volume_s %></td>
                        </tr>

                    </table>
                </section>
            </main>
            <!-- Footer -->
            <%- include('partials/footer') %>
            <!-- Footer -->
        </div>

    </body>
    <script type="text/javascript">
        let ctx = document.getElementById('supply_chart').getContext('2d');
        let supply_chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: [
                    <% for (let i = 0; i < coin.platforms.length; i++) { %>
                        "<%= coin.platforms[i].name %>",
                    <% } %>  
                ],

                datasets: [{
                    label: '% on Platforms',
                    data: [
                        <% for (let i = 0; i < coin.platforms.length; i++) { %>
                            <% if( typeof(coin.platforms[i].supply) == 'number') { %>
                                <%= ((coin.platforms[i].supply/coin.scw.total_supply)*100).toFixed(2) %>,
                            <% } else { %>
                                undefined,
                            <% } %>
                        <% } %>  
                    ],
                    
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.5)',
                        'rgba(54, 162, 235, 0.5)',
                        'rgba(255, 206, 86, 0.5)',
                        'rgba(75, 192, 192, 0.5)',
                        'rgba(153, 102, 255, 0.5)',
                        'rgba(255, 159, 64, 0.5)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {}
        });
    </script>
</html>
