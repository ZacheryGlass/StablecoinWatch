<style>
    /****************************************
                    Header
    *****************************************/
    header {
        background: #003c60;
        padding-top: 10px;
    }

    header img {
        max-height: 90px;
        border-radius: 10px;
        margin: 0;
        padding: 0;
    }

    h1,
    h1 a {
        text-align: center;
        margin: 0;
        padding: 0;
    }
    /****************************************
                    buttons
    *****************************************/
    .btn:link,
    .btn:visited {
        text-decoration: none;
        padding: 10px 0;
        margin: 2px;
        display: inline-block;
        border-radius: 10px;
        transition: all 0.2s;
        user-select: none;
        width: 40%;
        min-width: 100px;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-white {
        background-color: #fff;
        color: #777;
    }
    .disabled {
        opacity: 0.6;
        pointer-events: none;
        cursor: not-allowed;
    }
    /****************************************
                    bar
    *****************************************/
    .bar {
        margin: 0 auto;
        padding: 0;
        background: #007ac1;
        text-align: center;
    }

    .gridy {
        display: grid;
        grid-template-columns: 1fr 1.5fr 1fr;
        grid-template-areas:
            'a b c'
            'd b f';
        align-items: center;
        color: white;
        font-weight: bold;
        max-width: 960px;
        margin: auto;
        padding: 0.25rem 0;
    }

    .gridy > * {
        margin-left: 5px;
        margin-right: 5px;
    }
    .gridy .a {
        grid-area: a;
        text-align: left;
    }
    .gridy .b {
        grid-area: b;
    }
    .gridy .c {
        grid-area: c;
        text-align: right;
    }

    .gridy .d {
        grid-area: d;
        text-align: left;
    }

    .gridy .f {
        grid-area: f;
        text-align: right;
    }
</style>
<header>
    <h1>
        <a href="/"><img src="/site_logo.png" alt="Stablecoin Watch" /></a>
    </h1>
</header>
<div class="bar">
    <div class="gridy">
        <section class="a">
            Total Market Cap:&nbsp;<%=totalMCap_s%>
        </section>
        <section class="b">
            <% if ( active === 'home' ) { %>
            <a href="/" class="btn btn-white disabled">Coins</a>
            <% } else { %>
            <a href="/" class="btn btn-white">Coins</a>
            <% } %> <% if ( active === 'chains' ) { %>
            <a href="/chains" class="btn btn-white disabled">Chains</a>
            <% } else { %>
            <a href="/chains" class="btn btn-white">Chains</a>
            <% } %>
        </section>
        <section class="c">
            Total $ on ETH: <%=totalETHMCap_s%>
        </section>
        <section class="d">
            Total 24h Volume: <%=totalVolume_s%>
        </section>
        <section class="f">
            Total % on ETH: <%= ((totalETHMCap/totalMCap)*100).toFixed(1)%>%
        </section>
    </div>
</div>
