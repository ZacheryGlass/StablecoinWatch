<style>
    .site-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        padding: 1rem 1.5rem;
        border-radius: 0 0 10px 10px;
        margin-bottom: 1rem;
        -webkit-text-size-adjust: 100%;
        text-size-adjust: 100%;
    }
    
    .header-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
        flex-wrap: nowrap; /* Keep items on one line */
    }
    
    .header-left {
        display: flex;
        align-items: center;
        gap: 2rem;
        flex: 1;
        min-width: 0;
    }
    
    .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-shrink: 0;
    }
    .brand img { 
        height: 48px; 
        width: auto; 
        border-radius: 6px; 
    }
    .brand .title { 
        display: none; 
    }

    .metrics-inline {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: nowrap;
        overflow: hidden;
        max-width: clamp(200px, calc(100vw - 400px), 600px);
        min-width: 0;
    }
    
    .metric-inline {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        color: rgba(255,255,255,0.95);
        text-decoration: none;
        transition: color 0.2s ease;
        white-space: nowrap;
        min-width: 0;
        flex-shrink: 1;
    }
    
    /* Priority-based shrinking - higher values disappear first */
    .metric-inline:nth-child(1) { flex-shrink: 1; } /* Market Cap - most important */
    .metric-inline:nth-child(3) { flex-shrink: 2; } /* 24h Volume - medium importance */
    .metric-inline:nth-child(5) { flex-shrink: 4; } /* ETH Total - less important */
    .metric-inline:nth-child(7) { flex-shrink: 4; } /* % on ETH - less important */
    .metric-inline:nth-child(9) { flex-shrink: 5; } /* Chain Data - least important */
    
    .metric-inline:hover {
        color: #fff;
        text-decoration: none;
    }
    
    .metric-label-inline {
        font-size: 0.9rem;
        opacity: 0.85;
    }
    
    .metric-value-inline {
        font-size: 1rem;
        font-weight: 600;
    }
    
    .metric-divider {
        width: 1px;
        height: 20px;
        background: rgba(255,255,255,0.3);
        flex-shrink: 0;
        min-width: 1px;
    }

    .nav {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        flex-shrink: 0;
    }
    
    .nav a {
        text-decoration: none;
        color: rgba(255,255,255,0.9);
        font-weight: 500;
        font-size: 1rem;
        padding: 0.5rem 0.75rem;
        border-bottom: 2px solid transparent;
        border-radius: 4px 4px 0 0;
        transition: all 0.2s ease;
        white-space: nowrap;
        position: relative;
        display: inline-flex;
        align-items: center;
        line-height: 1;
    }
    
    .nav a:hover { 
        color: #fff; 
        border-bottom-color: rgba(255,255,255,0.5);
        background-color: rgba(255,255,255,0.1);
    }
    
    .nav a.active { 
        color: #fff; 
        border-bottom-color: #fff;
        font-weight: 600;
        background-color: rgba(255,255,255,0.15);
    }
    
    .nav a:focus-visible {
        outline: 2px solid #fff;
        outline-offset: 2px;
        background-color: rgba(255,255,255,0.2);
    }

    /* Mobile responsiveness for compact header */
    @media (max-width: 1200px) {
        .header-left {
            gap: 1.5rem;
        }
        .metrics-inline {
            gap: 1rem;
            max-width: clamp(150px, calc(100vw - 450px), 500px);
        }
    }
    
    @media (max-width: 900px) {
        .metrics-inline {
            gap: 0.75rem;
            max-width: clamp(100px, calc(100vw - 500px), 400px);
        }
    }

    @media (max-width: 768px) {
        .site-header {
            padding: 0.75rem 1rem;
        }
        
        .header-bar {
            gap: 1rem;
        }
        
        .header-left {
            gap: 1rem;
        }
        
        .metrics-inline {
            display: none; /* Hide all metrics to prevent wrapping */
        }
        
        .nav {
            gap: 1rem;
        }
        
        .nav a {
            font-size: 0.95rem;
        }
    }

    @media (max-width: 640px) {
        .site-header {
            padding: 0.75rem 1rem;
        }
        
        .header-bar {
            /* Keep horizontal layout and prevent wrapping */
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            gap: 0.75rem;
            flex-wrap: nowrap;
        }
        
        .header-left {
            width: auto;
            justify-content: flex-start;
            gap: 0.75rem;
        }
        
        .brand img {
            height: 40px;
        }
        
        .nav {
            gap: 1.25rem;
        }
        
        .nav a {
            padding: 0.35rem 0.5rem; /* Reduce button height */
        }
    }

    @media (max-width: 480px) {
        .site-header {
            padding: 0.5rem 0.75rem;
            margin-bottom: 0.75rem;
        }
        
        .header-bar {
            gap: 0.5rem;
        }
        
        .brand img {
            height: 36px;
        }
        
        .nav {
            gap: 1.5rem;
        }
        
        .nav a {
            font-size: 0.9rem;
            display: inline-block; /* ensure exact height control */
            height: 32px; min-height: 32px; max-height: 32px; /* lock height */
            line-height: 32px; /* vertically center text */
            padding: 0 0.5rem; /* horizontal padding only */
            box-sizing: border-box;
            -webkit-text-size-adjust: 100%;
            text-size-adjust: 100%;
        }
    }

    @media (max-width: 360px) {
        .site-header {
            padding: 0.5rem;
        }
        
        .brand img {
            height: 32px;
        }
        
        .nav {
            gap: 1rem;
        }
        
        .nav a {
            font-size: 0.85rem;
            display: inline-block; /* ensure exact height control */
            height: 32px; min-height: 32px; max-height: 32px; /* keep fixed */
            line-height: 32px;
            padding: 0 0.4rem; /* horizontal only */
            box-sizing: border-box;
        }
    }
</style>

<div class="site-header">
    <div class="header-bar">
        <div class="header-left">
            <a class="brand" href="/">
                <img src="/site_logo.PNG" alt="Stablecoin Watch" />
            </a>
            
            <div class="metrics-inline">
                <a class="metric-inline" href="/?sort=mcap&dir=desc" aria-label="View market cap details and sort by market cap">
                    <span class="metric-label-inline">Market Cap:</span>
                    <span class="metric-value-inline"><%= (data && data.metrics && data.metrics.totalMCap_s) || 'No data' %></span>
                </a>
                
                <div class="metric-divider"></div>
                
                <a class="metric-inline" href="/?sort=volume&dir=desc" aria-label="View 24 hour volume and sort by volume">
                    <span class="metric-label-inline">24h Volume:</span>
                    <span class="metric-value-inline"><%= (data && data.metrics && data.metrics.totalVolume_s) || 'No data' %></span>
                </a>
                
                <% if (typeof totalETHMCap_s !== 'undefined') { %>
                <div class="metric-divider"></div>
                <a class="metric-inline" href="/platforms" aria-label="View blockchain platforms; see Ethereum totals">
                    <span class="metric-label-inline">ETH Total:</span>
                    <span class="metric-value-inline"><%= totalETHMCap_s %></span>
                </a>
                <% } %>
                
                <% if (typeof totalETHMCap !== 'undefined' && data && data.metrics && data.metrics.totalMCap) { %>
                <div class="metric-divider"></div>
                <a class="metric-inline" href="/platforms" aria-label="Explore blockchain platform distribution; percent on Ethereum">
                    <span class="metric-label-inline">% on ETH:</span>
                    <span class="metric-value-inline"><%= ((totalETHMCap/data.metrics.totalMCap)*100).toFixed(1) %>%</span>
                </a>
                <% } %>
                
                <% if ((typeof totalETHMCap === 'undefined' || !totalETHMCap) && typeof dataCompleteness !== 'undefined') { %>
                <div class="metric-divider"></div>
                <span class="metric-inline" title="Chain distribution data incomplete (<%= dataCompleteness %>% coverage). Visit individual coin pages for available per-chain data.">
                    <span class="metric-label-inline">Chain Data:</span>
                    <span class="metric-value-inline" style="opacity: 0.7;"><%= dataCompleteness %>% available</span>
                </span>
                <% } %>
            </div>
        </div>
        
        <nav class="nav" role="tablist" aria-label="Main navigation">
            <a href="/" 
               class="<%= active === 'home' ? 'active' : '' %>" 
               role="tab" 
               aria-selected="<%= active === 'home' ? 'true' : 'false' %>"
               aria-controls="content"
               id="tab-stablecoins">Stablecoins</a>
            <a href="/platforms" 
               class="<%= active === 'chains' ? 'active' : '' %>" 
               role="tab" 
               aria-selected="<%= active === 'chains' ? 'true' : 'false' %>"
               aria-controls="content"
               id="tab-blockchains">Blockchains</a>
        </nav>
    </div>
</div>
