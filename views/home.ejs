<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Stablecoin Watch</title>
    <link rel="stylesheet" type="text/css" href="/common.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        .grid_container {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .grid_left {
            margin: 0;
            padding: 0;
            width: 80%;
            text-align: left;
            display: inline-flex;
        }
        .grid_right {
            display: inline-flex;
            margin: 0;
            padding: 0;
            width: 15%;
            text-align: right;
        }

        .supply_list li {
            padding: 0;
            top: 0;
            font-size: 14px;
            list-style: none;
            transform: translateY(-20px);
        }

        @media only screen and (max-width: 767px) {
            .supply_list li {
                font-size: 10px;
            }
        }

        .row ul.coinstats > li {
            margin: 0;
            font-size: 16px;
            font-weight: normal;
            list-style: none;
            display: inline-block;
            width: 12%;
            box-sizing: border-box;
            display: inline-flex;
            padding: 5px 10px;
            text-align: center;
            justify-content: center;
        }

        .row ul.coinstats > li.coinrank {
            width: 5%;
            text-align: center;
        }
        
        .row ul.coinstats > li.name {
            width: 17% !important;
            justify-content: left;
            text-align: left !important;
        }

        .row ul.coinstats > li.platform {
            width: 17% !important;
            justify-content: left;
            text-align: left !important;
        }

        /* .row ul.coinstats > li.mcap_dom {
            width: 15%;
            text-align: left;
        } */



        .title ul.coinstats li {
            padding: 15px 13px;
            font-weight: bold;
        }

        img.coin_logo {
            width: 20px;
            height: 20px;
            padding-right: 5px;
        }

        /* expand more content */
        ul.more-content li.split {
            position: relative;
            top: 13px;
            font-size: 13px;
            margin: 0;
            padding: 6px 13px;
            display: block;
            height: 50px;
        }

        @media only screen and (max-width: 767px) {
            ul.more-content li.split {
                font-size: 11px;
            }
        }

        .expand:hover {
            /* height: 105px; */
        }

        .more-content {
            display: none;
        }

        .more-content li {
            padding: 0px;
            text-align: inherit;
        }

        .expand:hover>.more-content {
            display: block;
        }

        @media only screen and (max-width: 767px) {
            .expand:hover {
                height: 125px;
            }
        }

        @media only screen and (max-width: 359px) {
            .expand:hover {
                height: 145px;
            }
        }

        .split * {
            box-sizing: border-box;
        }

        .split:after {
            content: '';
            display: table;
            clear: both;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('partials/header') %>
    <!-- Header -->
    <main>
        <% if( coins ) { %>
            <section class="wrapper">
                <!-- Row title -->
                <main class="row title">
                    <ul class="coinstats">
                        <li class="coinrank">#</li>
                        <li class="name">Name</li>
                        <li class="symbol">Symbol</li>
                        <li>Price</li>
                        <li>Market Cap</li>
                        <li class='mcap_dom'>Market Cap Dominance</li>
                        <li>Volume (24h)</li>
                        <!-- <li>Volume Dominance</li> -->
                        <li class="platform">Platform</li>
                    </ul>
                </main>
                <% coins.forEach( (coin, i) => { %>
                    <!-- Row X -->
                    <article class="row expand type<%=i%4+1%>">
                        <ul class="coinstats">
                            <!-- rank -->
                            <li class="coinrank"><%= (i+1) %></li>
                            <!-- name -->
                            <li class="name">
                                <strong><a href="#"><%= coin.name %></a></strong>
                            </li>
                            <!-- symbol -->
                            <li class="symbol">
                                <img class="coin_logo" src="<%= coin.img_url %>" alt="" />
                                <%= coin.symbol %>
                            </li>
                            <!-- price -->
                            <li>$<%= coin.price %></li>
                            <!-- market cap -->
                            <li><%= coin.mcap_s %></li>
                            <!-- market cap dominance -->
                            <li class='mcap_dom'>
                                <%= ((coin.mcap/totalMCap)*100).toFixed(2) %>%
                            </li>
                            <!-- volume -->
                            <li><%= coin.volume_s %></li>
                            <!-- volume dominance -->
                            <!-- <li>
                                    <%#= ((coin.volume/totalVolume)*100).toFixed(2) %>%
                                </li> -->

                            <!-- platforms -->
                            <% if ( coin.platforms.length > 1 ) { %>
                                <li class="platform">
                                    <ul class="supply_list">
                                        <% coin.platforms.forEach( platform => { %>
                                            <li class="grid_container">
                                                <div class="grid_left">
                                                    <%= platform.name %>: 
                                                </div>
                                                <div class="grid_right">
                                                    <% if (platform.supply) { %>
                                                        <%=Math.min( 100, ( ( platform.supply / coin.cmc_circulating_supply ) * 100 )).toFixed() %>%
                                                    <% } else { %>
                                                        ? 
                                                    <% } %>
                                                </div>
                                            </li>
                                        <% }); %>
                                    </ul>
                                </li>
                            <% } else { %> <!-- if more than 1 platform -->
                                <li class="platform">
                                    <%= coin.platforms[0].name %>
                                </li>
                            <% } %> 
                        </ul>
                        <ul class="more-content">
                            <li class="split">
                                <%= coin.desc %>
                            </li>
                        </ul>
                    </article>
                <% }) %> <!-- forEach coin -->
            </section>
        <% } else { %>
            <p>Something went wrong.</p>
        <% } %>
    </main>
    <!-- Footer -->
    <%- include('partials/footer') %>
    <!-- Footer -->
</body>
</html>