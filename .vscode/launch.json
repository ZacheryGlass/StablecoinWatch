{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch StablecoinWatch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app/app.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Launch StablecoinWatch (Debug Mode)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app/app.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "true"
            },
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Attach to Running Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
        }
    ]
}